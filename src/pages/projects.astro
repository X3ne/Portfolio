---
import { getCollection, type CollectionEntry } from 'astro:content'

import BaseLayout from '../layouts/Layout.astro'

import Hero from '../components/Hero.astro'
import Card from '../components/Card.astro'

const collection: CollectionEntry<'projects'>[] = await getCollection('projects')
const projects = collection.sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
)
---

<BaseLayout
	title="Projects"
	description="A list of projects I've worked on."
>
	<div>
		<main>
			<Hero
				title="Projects"
			/>
			{
				projects.length === 0 && (
					<div class="text-center mt-12">
						<p class="text-2xl font-bold">No projects found.</p>
					</div>
				)
			}
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-2 max-w-screen-2xl mx-auto mt-12 px-8">
				{
					projects.length > 0 && projects.map((project) => (
						<Card project={project} />
					))
				}
			</div>
		</main>
	</div>
</BaseLayout>
