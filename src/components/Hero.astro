---
interface Props {
	title: string;
	tagline?: string;
}

const { tagline, title } = Astro.props;
---

<div class="flex flex-col gap-4 items-center justify-center w-screen px-8">
	<div>
		<h1 class="text-5xl md:text-8xl font-bold">{title}</h1>
		{tagline && <p>{tagline}</p>}
	</div>
	<slot />
</div>
